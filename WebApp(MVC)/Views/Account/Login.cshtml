@model WebApp_MVC_.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sync Validate</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box; /* Ensure padding and borders are included in the width/height calculation */
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            width: 110%;
            max-width: 380px; /* Limit the maximum width of the form */
            text-align: center;
        }

        .brand-title {
            font-size: 25px;
            font-weight: 600;
            color: #007BFF;
            margin-bottom: 15px;
        }

        h2 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            display: block;
            text-align: left;
            font-weight: 500;
            margin-bottom: 6px;
            font-size: 14px;
            color: #555;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

            .input-group input {
                width: 100%; /* Ensure the input takes up the full width of its container */
                padding: 14px 20px;
                border: 1px solid #ddd;
                border-radius: 10px;
                font-size: 16px;
                outline: none;
                transition: border-color 0.3s ease-in-out;
            }

                .input-group input:focus {
                    border-color: #007BFF;
                }

        .btn-primary {
            width: 100%; /* Ensure the button takes up the full width of the container */
            background-color: #007BFF;
            color: white;
            padding: 14px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .forgot-password {
            font-size: 12px;
            margin-top: 10px;
            color: #007BFF;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        p {
            margin-top: 25px;
            font-size: 14px;
            color: #777;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .footer-text {
            margin-top: 35px;
            font-size: 12px;
            color: #aaa;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="brand-title">Sync Validate</div>
        <h2>Login</h2>

        <form method="post" action="/Account/Login">
            <div class="input-group">
                <label for="Username">Username</label>
                <input type="text" name="Username" id="Username" required />
            </div>

            <div class="input-group">
                <label for="Password">Password</label>
                <input type="password" name="Password" id="Password" required />
            </div>

            <button type="submit" class="btn-primary">Login</button>

            <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
            @*<a href="#" class="forgot-password">Forgot password?</a>*@
        </form>

        @*<div class="footer-text">
                <p>Powered by Sync Validate</p>
            </div>*@
    </div>

</body>
</html>
